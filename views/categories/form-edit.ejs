<%- include('../partials/header') %>

<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <div class="row">
      <div class="col">
        <hr>
        <div class="card">
          <div class="card-header">
            <h2>Edite a Categoria</h2>
          </div>
          <div class="card-body">
            <form method="POST" action="/category/<%=category.id%>/update">
              <input type="hidden" name="id" value="<%=category.id%>">
              <input class="form-control" type="text" name="title" placeholder="Defina o titulo da Categoria" value="<%= category.title %> "> <br>
              <button class="btn btn-success">Atualizar</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

<%- include('../partials/footer') %>