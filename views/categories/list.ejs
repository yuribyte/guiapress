<div class="container">
  <div class="card">
    <div class="card-header">
      <h3>Lista de Categorias</h3>
    </div>
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th>Id</th>
            <th>Titulo</th>
            <th>Slug</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% categories.forEach(item => { %>
            <tr>
              <th><span class="badge badge-secondary" style="font-size: 15px;"><%= item.id %></span> </th>
              <th><%= item.title %> </th>
              <th><%= item.slug %> </th>
              <th><a href="categories/details/<%= item.id %>" class="btn btn-dark">Detalhes</a></th>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>